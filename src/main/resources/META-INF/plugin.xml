<idea-plugin>
    <id>edu.illinois.cs.cs125.intellij-logger</id>
    <name>CS 125 @ Illinois</name>
    <vendor email="challen@illinois.edu" url="https://cs125.cs.illinois.edu">CS 125 @ Illinois</vendor>

    <description><![CDATA[
    Plugin to simplify MP development for CS 125 @ Illinois.
    ]]></description>

    <depends>com.intellij.modules.lang</depends>

    <extensions defaultExtensionNs="com.intellij">
        <applicationService serviceImplementation="CS125Persistence"/>
    </extensions>

    <application-components>
        <component>
            <implementation-class>CS125Component</implementation-class>
        </component>
    </application-components>

    <actions>
        <group id="CS125.MainMenu"
               text="CS 125"
               description="CS 125 Main Menu">
            <add-to-group group-id="MainMenu"
                          anchor="last"/>
            <action id="CS125.MainMenu.Grade"
                    class="CS125GradeAction"
                    text="Grade MP"
                    description="Initiate CS 125 MP grading"/>
        </group>

        <action id="CS125.ToolbarRunGroup.Grade"
                class="CS125GradeAction"
                description="Initiate CS 125 MP grading"
                icon="/icons/cs125.png">
            <add-to-group group-id="ToolbarRunGroup" anchor="last"/>
            <keyboard-shortcut keymap="$default" first-keystroke="shift ctrl G"/>
        </action>

    </actions>
</idea-plugin>